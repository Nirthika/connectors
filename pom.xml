<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.ballerinalang</groupId>
        <artifactId>ballerinalang</artifactId>
        <version>0.94.2-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.ballerina.connectors</groupId>
    <artifactId>connectors</artifactId>
    <version>0.94.2-SNAPSHOT</version>
    <name>Ballerina Connectors - Parent</name>

    <url>http://wso2.org</url>

    <scm>
        <url>https://github.com/ballerinalang/connectors.git</url>
        <developerConnection>scm:git:https://github.com/ballerinalang/connectors.git
        </developerConnection>
        <connection>scm:git:https://github.com/ballerinalang/connectors.git</connection>
        <tag>HEAD</tag>
    </scm>

    <repositories>
        <repository>
            <id>wso2.releases</id>
            <name>WSO2 Releases Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/releases/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>ignore</checksumPolicy>
            </releases>
        </repository>
        <repository>
            <id>wso2.snapshots</id>
            <name>WSO2 Snapshot Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.ballerinalang</groupId>
            <artifactId>ballerina-core</artifactId>
            <version>${ballerina.version}</version>
        </dependency>
        <dependency>
            <groupId>org.ballerinalang</groupId>
            <artifactId>ballerina-lang</artifactId>
            <version>${ballerina.version}</version>
        </dependency>
        <dependency>
            <groupId>org.ballerinalang</groupId>
            <artifactId>ballerina-http</artifactId>
            <version>${ballerina.version}</version>
        </dependency>
        <dependency>
            <groupId>org.ballerinalang</groupId>
            <artifactId>ballerina-builtin</artifactId>
            <version>${ballerina.version}</version>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>ballerina/**</exclude>
                </excludes>
            </resource>
            <!-- copy built-in ballerina sources to the jar -->
            <resource>
                <directory>${generated.ballerina.source.directory}</directory>
                <targetPath>META-INF/natives</targetPath>
            </resource>
            <!-- copy the connector docs to the jar -->
            <resource>
                <directory>${project.build.directory}/docs</directory>
                <targetPath>DOCS</targetPath>
            </resource>
            <!-- copy the samples to the jar -->
            <resource>
                <directory>${connectors.samples.dir}</directory>
                <targetPath>SAMPLES</targetPath>
            </resource>


        </resources>
        <plugins>
            <!-- For creating the ballerina structure from connector structure -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${mvn.resource.plugins.version}</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>

                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${connectors.source.temp.dir}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>basicauth/src</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>amazons3/src</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>oauth2/src</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>soap/src</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>twitter/src</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>amazonauth/src</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>salesforcerest/src</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-samples</id>

                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${connectors.samples.dir}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>basicauth/samples</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>amazons3/samples</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>oauth2/samples</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>soap/samples</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>twitter/samples</directory>
                                    <filtering>true</filtering>
                                </resource>
                                <resource>
                                    <directory>salesforcerest/samples</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Generate api doc -->
            <plugin>
                <groupId>org.ballerinalang</groupId>
                <artifactId>docerina-maven-plugin</artifactId>
                <version>${docerina.maven.plugin.version}</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>docerina</goal>
                        </goals>
                        <configuration>
                            <outputDir>${project.build.directory}/docs</outputDir>
                            <sourceDir>${connectors.source.temp.dir}</sourceDir>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.ballerinalang</groupId>
                        <artifactId>ballerina-http</artifactId>
                        <version>${ballerina.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
            <!-- For ballerina annotation processing -->
            <plugin>
                <groupId>org.bsc.maven</groupId>
                <artifactId>maven-processor-plugin</artifactId>
                <version>${mvn.processor.plugin.version}</version>
                <configuration>
                    <processors>
                        <processor>org.ballerinalang.codegen.BallerinaAnnotationProcessor</processor>
                    </processors>
                    <options>
                        <nativeEntityProviderPackage>org.ballerinalang.generated.providers</nativeEntityProviderPackage>
                        <nativeEntityProviderClass>StandardNativeElementProvider</nativeEntityProviderClass>
                    </options>
                </configuration>
                <executions>
                    <execution>
                        <id>process</id>
                        <goals>
                            <goal>process</goal>
                        </goals>
                        <phase>generate-sources</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin><!-- Overridden from parent pom to exclude generated sources -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <executions>
                    <execution>
                        <id>validate</id>
                        <phase>validate</phase>
                        <configuration>
                            <!--Exclude generated sources-->
                            <excludes>**/${native.constructs.provider.class}.java</excludes>
                        </configuration>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

    <properties>
        <ballerina.version>0.94.2-SNAPSHOT</ballerina.version>
        <mvn.exec.plugin.version>1.5.0</mvn.exec.plugin.version>
        <mvn.processor.plugin.version>2.2.4</mvn.processor.plugin.version>
        <mvn.resource.plugins.version>3.0.2</mvn.resource.plugins.version>

        <connectors.source.temp.dir>${basedir}/target/extra-resources</connectors.source.temp.dir>
        <connectors.samples.dir>${basedir}/target/extra-samples</connectors.samples.dir>

        <!-- Path to the ballerina source directory -->
        <package.repository.provider.class>org.ballerinalang.connectors.repository.BallerinaBuiltinPackageRepository
        </package.repository.provider.class>
        <native.constructs.provider.package>org.ballerinalang.connectors</native.constructs.provider.package>
        <native.constructs.provider.class>BallerinaConnectorConstructsProvider</native.constructs.provider.class>

        <!-- Path to the generated natives ballerina files temp directory -->
        <generated.ballerina.source.directory>${connectors.source.temp.dir}</generated.ballerina.source.directory>
        <docerina.maven.plugin.version>0.94.2-SNAPSHOT</docerina.maven.plugin.version>
    </properties>
</project>
